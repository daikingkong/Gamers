<%= form_with model:game_new, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class:'btn btn-success' %>
  </div>
<% end %>