<table class="table">
  <tbody>
    <% games.each do |game| %>
      <tr>
        <td>
          <%= link_to (game.user) do %>
            <%= image_tag game.user.get_profile_image, size:'100x100' %><br>
            <%= game.user.name %>
          <% end %>
        <td>
          <%= link_to (game) do %>
            <%= game.title %>
          <% end %>
        </td>
        <td><%= game.body %></td>
        <td><%= link_to "Edit", edit_game_path(game), class:'btn btn-success' %></td>
        <td><%= link_to "Destroy", game_path(game), method: :delete, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>